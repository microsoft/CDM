{
    "jsonSchemaSemanticVersion": "1.0.0",
    "imports": [
        {
            "corpusPath": "/core/cdsConcepts.1.0.cdm.json"
        },
        {
            "corpusPath": "/core/wellKnownCDSAttributeGroups.1.0.cdm.json"
        },
        {
            "corpusPath": "Asset.1.0.cdm.json"
        },
        {
            "corpusPath": "/core/applicationCommon/foundationCommon/Product.1.0.cdm.json"
        }
    ],
    "definitions": [
        {
            "entityName": "Signal",
            "extendsEntity": "CdmEntity",
            "exhibitsTraits": [
                {
                    "traitReference": "is.CDM.entityVersion",
                    "arguments": [
                        {
                            "name": "versionNumber",
                            "value": "1.0"
                        }
                    ]
                }
            ],
            "displayName": "Product Signal",
            "description": "An enriched telemetry signal from a product, service or device.",
            "hasAttributes": [
                {
                    "attributeGroupReference": {
                        "attributeGroupName": "attributesAddedAtThisScope",
                        "exhibitsTraits": [
                            {
                                "traitReference": "is.CDM.attributeGroup",
                                "arguments": [
                                    {
                                        "entityReference": {
                                            "entityShape": "attributeGroupSet",
                                            "constantValues": [
                                                [
                                                    "/core/applicationCommon/foundationCommon/productInsights/Signal.1.0.cdm.json/Signal/hasAttributes/attributesAddedAtThisScope"
                                                ]
                                            ]
                                        }
                                    }
                                ]
                            }
                        ],
                        "members": [
                            {
                                "purpose": "occuredOn",
                                "dataType": "dateTime",
                                "name": "signalTime",
                                "appliedTraits": [
                                    {
                                        "traitReference": "is.requiredAtLevel",
                                        "arguments": [
                                            {
                                                "name": "level",
                                                "value": "systemrequired"
                                            }
                                        ]
                                    }
                                ],
                                "displayName": "Signal Timestamp",
                                "description": "DateTime signal was sent from device. DateTime value stored as UTC. Field is required."
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "timezone",
                                "name": "timezone",
                                "displayName": "Timezone",
                                "description": "Timezone as captured from signal during ingestion. Server stores timezone as specified on signal.timestamp, unless device directly specifies this value."
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "name",
                                "name": "name",
                                "appliedTraits": [
                                    {
                                        "traitReference": "is.requiredAtLevel",
                                        "arguments": [
                                            {
                                                "name": "level",
                                                "value": "systemrequired"
                                            }
                                        ]
                                    }
                                ],
                                "displayName": "Signal Name",
                                "description": "Name of signal"
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "string",
                                "name": "version",
                                "appliedTraits": [
                                    "means.measurement.version"
                                ],
                                "displayName": "Signal Version",
                                "description": "Version of signal, as defined by device"
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "dateTime",
                                "name": "serverTime",
                                "displayName": "Server Timestamp",
                                "description": "DateTime signal was received ingested by server"
                            },
                            {
                                "name": "CDSProduct",
                                "entity": {
                                    "entityReference": "Product",
                                    "appliedTraits": [
                                        {
                                            "traitReference": "is.identifiedBy",
                                            "arguments": [
                                                "Product/(resolvedAttributes)/productId"
                                            ]
                                        }
                                    ]
                                },
                                "resolutionGuidance": {
                                    "renameFormat": "{m}",
                                    "entityByReference": {
                                        "allowReference": true,
                                        "foreignKeyAttribute": {
                                            "purpose": "hasA",
                                            "dataType": "entityId",
                                            "name": "productId",
                                            "appliedTraits": [
                                                {
                                                    "traitReference": "is.CDS.lookup",
                                                    "arguments": [
                                                        {
                                                            "name": "style",
                                                            "value": "single"
                                                        }
                                                    ]
                                                }
                                            ],
                                            "displayName": "Product",
                                            "description": "Reference to Product entity identifier within CDS."
                                        }
                                    }
                                }
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "string",
                                "name": "partNumber",
                                "displayName": "Part Number",
                                "description": "This is the 'friendly' product name as referred to in CDS."
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "string",
                                "name": "deviceId",
                                "displayName": "Device Id",
                                "description": "Unique device ID as referred to within IoT and CDS platforms"
                            },
                            {
                                "purpose": "hasA",
                                "dataType": "string",
                                "name": "serialNumber",
                                "displayName": "Serial Number",
                                "description": "A unique end-user friendly reference ID generally found within most devices."
                            },
                            {
                                "name": "CDSAsset",
                                "entity": {
                                    "entityReference": "Asset",
                                    "appliedTraits": [
                                        {
                                            "traitReference": "is.identifiedBy",
                                            "arguments": [
                                                "Asset/(resolvedAttributes)/assetId"
                                            ]
                                        }
                                    ]
                                },
                                "resolutionGuidance": {
                                    "renameFormat": "{m}",
                                    "entityByReference": {
                                        "allowReference": true,
                                        "foreignKeyAttribute": {
                                            "purpose": "hasA",
                                            "dataType": "entityId",
                                            "name": "assetId",
                                            "appliedTraits": [
                                                {
                                                    "traitReference": "is.CDS.lookup",
                                                    "arguments": [
                                                        {
                                                            "name": "style",
                                                            "value": "single"
                                                        }
                                                    ]
                                                }
                                            ],
                                            "displayName": "Asset",
                                            "description": "Reference to Asset entity identifier within CDS."
                                        }
                                    }
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ]
}