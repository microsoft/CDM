{
    "$schema": "../../../../../../../../../schemaDocuments/schema.cdm.json",
    "jsonSchemaSemanticVersion": "1.1.0",
    "imports": [
        {
            "corpusPath": "_allImports.cdm.json"
        }
    ],
    "definitions": [
        {
            "entityName": "Person",
            "hasAttributes": [
                {
                    "purpose": "identifiedBy",
                    "dataType": "integer",
                    "name": "personId"
                },
                {
                    "purpose": "hasA",
                    "dataType": "string",
                    "name": "personName"
                },
                {
                    "name": "contactAt",
                    "isPolymorphicSource": true,
                    "entity": {
                        "source": {
                            "entityReference": {
                                "entityName": "ContactKinds",
                                "hasAttributes": [
                                    {
                                        "name": "emailKind",
                                        "entity": "Email",
                                        "resolutionGuidance": {
                                            "renameFormat": "{m}"
                                        }
                                    },
                                    {
                                        "name": "phoneKind",
                                        "entity": "Phone",
                                        "resolutionGuidance": {
                                            "renameFormat": "{m}"
                                        }
                                    },
                                    {
                                        "name": "socialKind",
                                        "entity": "Social",
                                        "resolutionGuidance": {
                                            "renameFormat": "{m}"
                                        }
                                    }
                                ]
                            }
                        },
                        "operations": [
                            {
                                "$type": "includeAttributes",
                                "includeAttributes": [
                                    "personName",
                                    "address",
                                    "number",
                                    "account"
                                ]
                            }
                        ]
                    }
                }
            ]
        }
    ]
}