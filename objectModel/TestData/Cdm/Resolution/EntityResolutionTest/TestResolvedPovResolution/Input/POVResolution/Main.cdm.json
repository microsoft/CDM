{
    "$schema": "../schema.cdm.json",
    "jsonSchemaSemanticVersion": "1.0.0",
    "imports": [
        {
            "corpusPath": "/foundations.cdm.json"
        },
        {
            "corpusPath": "/POVResolution/Linked.cdm.json"
        },
        {
            "corpusPath": "/POVResolution/Linked2.cdm.json"
        }
    ],
    "definitions": [
        {
            "traitName": "sampleEntityTrait",
            "extendsTrait": "is",
            "hasParameters": [
                {
                    "name": "P1",
                    "defaultValue": "P1Def",
                    "required": false,
                    "direction": "in",
                    "dataType": "string"
                },
                {
                    "name": "P2",
                    "required": false,
                    "direction": "in",
                    "dataType": "entity"
                }
            ]
        },
        {
            "entityName": "Main",
            "extendsEntity": "CdmObjectBase",
            "exhibitsTraits": [
                {
                    "traitReference": "sampleEntityTrait",
                    "arguments": [
                        {
                            "name": "P1",
                            "value": "P1FromBase"
                        }
                    ]
                }
            ],
            "hasAttributes": [
                {
                    "purpose": "hasA",
                    "dataType": "string",
                    "name": "A1"
                },
                {
                    "purpose": "orderedBy",
                    "dataType": "string",
                    "name": "A2"
                },
                {
                    "name": "useLinked",
                    "entity": {
                        "entityReference": "Linked",
                        "appliedTraits": [
                            {
                                "traitReference": "is.identifiedBy",
                                "arguments": [
                                    "Linked/(resolvedAttributes)/linkedId"
                                ]
                            }
                        ]
                    },
                    "resolutionGuidance": {
                        "renameFormat": "{m}",
                        "entityByReference": {
                            "allowReference": true,
                            
                            "foreignKeyAttribute": {
                                "purpose": "hasA",
                                "dataType": "entityId",
                                "name": "main2linked",
                                "appliedTraits": [
                                    "is.linkedEntity.identifier"
                                ]
                            }
                        }
                    }
                },
                {
                    "purpose": "identifiedBy",
                    "dataType": "entityId",
                    "name": "mainId"
                },
                {
                    "name": "useLinked2",
                    "entity": {
                        "entityReference": "Linked2",
                        "appliedTraits": [
                            {
                                "traitReference": "is.identifiedBy",
                                "arguments": [
                                    "Linked2/(resolvedAttributes)/linkedId"
                                ]
                            }
                        ]
                    },
                    "resolutionGuidance": {
                        "renameFormat": "{m}",
                        "entityByReference": {
                            "allowReference": true,
                            "foreignKeyAttribute": {
                                "purpose": "hasA",
                                "dataType": "entityId",
                                "name": "main2linked2",
                                "appliedTraits": [
                                    "is.linkedEntity.identifier"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    ]
}