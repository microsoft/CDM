                "0.3.0"
            ]
        },
        "imports": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/import"
            }
        },
        "definitions": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/purpose"
                    },
                    {
