{
    "$schema": "../schema.cdm.json",
    "jsonSchemaSemanticVersion": "1.0.0",
    "imports": [
        {
            "corpusPath": "/foundations.cdm.json"
        },
        {
            "corpusPath": "BusinessDocument.cdm.json"
        },
        {
            "corpusPath": "Email.cdm.json"
        }
    ],
    "definitions": [
        {
            "entityName": "HumanResources",
            "extendsEntity": {
                "entityReference": "BusinessDocument",
                "appliedTraits": [
                    {
                        "traitReference": "is.classified",
                        "arguments": [
                            "HBI"
                        ]
                    }
                ]
            },
            "hasAttributes": [
                {
                    "purpose": "hasA",
                    "dataType": "email",
                    "name": "regardingPerson"
                },
                {
                    "name": "openingEmail",
                    "entity": "Email",
                    "resolutionGuidance": {
                        "cardinality": "one",
                        "renameFormat": "{a}_{m}",
                        "entityByReference": {
                            "allowReference": true,
                            "alwaysIncludeForeignKey": false,
                            "referenceOnlyAfterDepth": 2,
                            "foreignKeyAttribute": {
                                "dataType": "entityId",
                                "name": "foreignKey",
                                "appliedTraits": [
                                    "is.linkedEntity.identifier"
                                ]
                            }
                        },
                        "selectsSubAttribute": {
                            "selects": "all"
                        }
                    }
                },
                {
                    "name": "inResponseTo",
                    "entity": {
                        "entityReference": "Email",
                        "appliedTraits": [
                            {
                                "traitReference": "is.identifiedBy",
                                "arguments": [
                                    "Email/(resolvedAttributes)/commId"
                                ]
                            }
                        ]
                    },
                    "resolutionGuidance": {
                        "imposedDirectives": [
                            "referenceOnly"
                        ],
                        "entityByReference": {
                            "allowReference": true,
                            "renameFormat": "{m}",
                            "foreignKeyAttribute": {
                                "purpose": "hasA",
                                "dataType": "integer",
                                "name": "commId",
                                "appliedTraits": [
                                    "is.linkedEntity.identifier"
                                ]
                            }
                        },
                        "selectsSubAttribute": {
                            "selects": "all"
                        }
                    }
                }
            ]
        }
    ]
}