{
    "$schema": "../schema.cdm.json",
    "jsonSchemaSemanticVersion": "1.0.0",
    "imports": [
        {
            "corpusPath": "/foundations.cdm.json"
        },
        {
            "corpusPath": "Address.cdm.json"
        },
        {
            "corpusPath": "Photo.cdm.json"
        }
    ],
    "definitions": [
        {
            "entityName": "Customers",
            "extendsEntity": "CdmObjectBase",
            "hasAttributes": [
                {
                    "purpose": "namedBy",
                    "dataType": "fullName",
                    "name": "custFullName"
                },
                {
                    "purpose": "identifiedBy",
                    "dataType": "string",
                    "name": "custId"
                },
                {
                    "name": "homeAddress",
                    "purpose": "livesAt",
                    "entity": "Address",
                    "resolutionGuidance": {
                        "renameFormat": "home_{m}"
                    }
                },
                {
                    "name": "workAddress",
                    "purpose": "hasA",
                    "entity": "Address",
                    "resolutionGuidance": {
                        "renameFormat": "work_{m}"
                    }
                },
                {
                    "name": "facePicture",
                    "entity": {
                        "entityReference": "Photo",
                        "appliedTraits": [
                            {
                                "traitReference": "is.identifiedBy",
                                "arguments": [
                                    "Photo/(resolvedAttributes)/photoId"
                                ]
                            }
                        ]
                    },
                    "resolutionGuidance": {
                        "renameFormat": "{m}",
                        "entityByReference": {
                            "allowReference": true,
                            "foreignKeyAttribute": {
                                "purpose": "hasA",
                                "dataType": "entityId",
                                "name": "mainPhotoId",
                                "appliedTraits": [
                                    "is.linkedEntity.identifier"
                                ]
                            }
                        }
                    }
                },
                {
                    "name": "dogPicture",
                    "entity": "Photo"
                }
            ]
        }
    ]
}