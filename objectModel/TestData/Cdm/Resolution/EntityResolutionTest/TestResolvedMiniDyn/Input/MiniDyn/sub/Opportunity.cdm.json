{
    "$schema": "../../schema.cdm.json",
    "jsonSchemaSemanticVersion": "1.0.0",
    "imports": [
        {
            "corpusPath": "_allImports.cdm.json"
        }
    ],
    "definitions": [
        {
            "entityName": "Opportunity",
            "extendsEntity": "Base",
            "exhibitsTraits": [
                {
                    "traitReference": "perfStandard",
                    "arguments": [
                        {
                            "name": "P1",
                            "value": "P1FromOpportunity"
                        }
                    ]
                }
            ],
            "hasAttributes": [
                {
                    "purpose": "identifiedBy",
                    "dataType": "integer",
                    "name": "opportunityId"
                },
                {
                    "purpose": "hasA",
                    "dataType": "string",
                    "name": "product"
                },
                {
                    "purpose": "hasA",
                    "dataType": "currency",
                    "name": "amount"
                },
                {
                    "name": "forAccount",
                    "entity": {
                        "entityReference": "Account",
                        "appliedTraits": [
                            {
                                "traitReference": "is.identifiedBy",
                                "arguments": [
                                    "Account/(resolvedAttributes)/accountId"
                                ]
                            }
                        ]
                    },
                    "resolutionGuidance": {
                        "entityByReference": {
                            "allowReference": true,
                            "foreignKeyAttribute": {
                                "purpose": "hasA",
                                "dataType": "integer",
                                "name": "id"
                            }
                        },
                        "selectsSubAttribute": {
                            "selects": "all"
                        }
                    }
                }
            ]
        }
    ]
}